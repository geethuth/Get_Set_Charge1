<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PaymentActivity">

    <RelativeLayout
        android:id="@+id/brochure1_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/order" />


    </RelativeLayout>

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brochure1_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="You have 30 minutes for pickup"
        android:textColor="@color/bluegrey"
        android:textSize="20sp"
        android:typeface="serif" />

    <RelativeLayout
        android:id="@+id/stationNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/underline"
        android:padding="3dp">

        <TextView
            android:id="@+id/stationname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="Station Name"
            android:textColor="@color/black"
            android:textSize="17sp"

            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/check"
            android:gravity="center"
            android:padding="4dp"
            android:text="5 \nkm"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stationNameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp">

        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/bgGrey"
            android:padding="4dp"
            android:text="Place"
            android:textColor="@color/textGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:padding="4dp"
            android:text="Address Line 1"

            android:textColor="@color/textGrey"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address1"
            android:layout_alignParentStart="true"
            android:background="@color/bgGrey"
            android:padding="4dp"
            android:text="Address Line 2"
            android:textColor="@color/textGrey"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address2"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:padding="4dp"
            android:text="District"
            android:textColor="@color/textGrey"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>

    <Button
        android:id="@+id/navigateButton"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_above="@id/signinButton"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/whitebox_border"
        android:text="Navigate Me"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/signinButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/faketext"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/blueberry_bg"
        android:text="Change Pickup"
        android:textAllCaps="false"
        android:textColor="@color/buttontextBlue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/faketext"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="" />
</RelativeLayout>
