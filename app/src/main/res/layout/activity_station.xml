<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PaymentActivity">

    <RelativeLayout
        android:id="@+id/brochure1_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/station" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/stationNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/brochure1_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/underline"
        android:padding="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/stationname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="Station Name"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/stationNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stationname"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:paddingStart="8dp"
                android:text="Station Number"
                android:textColor="@color/textGrey"
                android:textSize="15sp"
                android:typeface="serif" />
        </RelativeLayout>

        <TextView
            android:id="@+id/distance"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/check"
            android:gravity="center"
            android:padding="4dp"
            android:text="5 \nkm"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stationNameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp">

        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/bgGrey"
            android:padding="4dp"
            android:text="Place"
            android:textColor="@color/textGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:padding="4dp"
            android:text="Address Line 1"

            android:textColor="@color/textGrey"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address1"
            android:layout_alignParentStart="true"
            android:background="@color/bgGrey"
            android:padding="4dp"
            android:text="Address Line 2"
            android:textColor="@color/textGrey"
            android:textSize="14sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address2"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:padding="4dp"
            android:text="District"
            android:textColor="@color/textGrey"
            android:textSize="14sp"
            android:typeface="serif" />

    </RelativeLayout>

    <Button
        android:id="@+id/navigateButton"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/phoneNumber"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/whitebox_border"
        android:text="Navigate Me"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/signinButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/faketext"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/blueberry_bg"
        android:text="Confirm Self Pickup"
        android:textAllCaps="false"
        android:textColor="@color/buttontextBlue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/faketext"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="" />
</RelativeLayout>
